{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "./build",
    "module": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "composite": false,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "test"
  ]
}