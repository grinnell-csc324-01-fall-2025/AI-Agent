{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "build",
    "module": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "composite": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "api/index.ts"
  ]
}